[library]
version = "@VERSION@"
description = "Flatpak portal library"
authors = "Flatpak"
license = "LGPL-3.0-only"
browse_url = "https://github.com/flatpak/libportal"
repository_url = "https://github.com/flatpak/libportal.git"
website_url = "https://libportal.org/"
docs_url = "https://libportal.org/"
logo_url = "libportal.svg"
dependencies = [
  "GObject-2.0",
  "Gtk-4.0",
]
devhelp = true
search_index = true

[dependencies."GObject-2.0"]
name = "GObject"
description = "The base type system library"
docs_url = "https://developer.gnome.org/gobject/stable"

[dependencies."Gtk-4.0"]
name = "GTK"
description = "The GTK toolkit"
docs_url = "https://docs.gtk.org/gtk4/"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
# The base URL for the web UI
base_url = "https://github.com/flatpak/libportal/blob/main/"

[extra]
urlmap_file = "urlmap.js"
content_files = [
  "libportal.md",
]
content_images = [
  "libportal.svg",
]
